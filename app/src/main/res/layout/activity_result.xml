<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    tools:context=".ActivityResult"
    android:orientation="vertical"
    android:padding="20dp"
   >

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Here is the result"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="50dp"

        />


    <ImageView
        android:id="@+id/iv_trophy"
        android:layout_width="405dp"
        android:layout_height="381dp"
        android:layout_gravity="center"
        android:contentDescription="Trophy"
        android:paddingBottom="80dp"
        android:src="@drawable/ic_trophy" />

    <TextView
        android:id="@+id/tv_congratulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey, Congratulation!"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Score is 0 out of 10"
        android:gravity="center"
        android:textColor="#CCD5E3"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:backgroundTint="@color/white"
        android:text="FINISH"
        android:textColor="@color/design_default_color_primary"
        />


</LinearLayout>